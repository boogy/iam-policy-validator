{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowSafeReadOnlyWithWildcardResource",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets",
        "iam:ListRoles",
        "ec2:DescribeInstances"
      ],
      "Resource": "*"
    },
    {
      "Sid": "DisallowedWildcardResource",
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:DeleteObject"],
      "Resource": "*"
    }
  ]
}
